<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="85dp"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="8dp"
        android:layout_marginBottom="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/video_thumbnail"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/image"
            app:shapeAppearance="@style/customImageStyle"
            app:layout_constraintTop_toTopOf="@id/video_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="@id/video_folder" />


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@id/video_thumbnail"
            app:layout_constraintBottom_toBottomOf="@id/video_thumbnail"
            app:layout_constraintStart_toStartOf="@id/video_thumbnail"
            app:layout_constraintEnd_toEndOf="@id/video_thumbnail"
            app:srcCompat="@drawable/ic_play_round_black"
            android:tint="@color/white"
            android:alpha="0.7" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/video_thumbnail"
            app:layout_constraintEnd_toEndOf="@id/video_thumbnail"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/black"
            android:alpha="0.8"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/elapsedtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:00"
                android:textSize="11sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingHorizontal="2dp"
                android:fontFamily="@font/poppins_regular" />
        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/video_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@string/testing_text"
            android:maxLines="2"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingHorizontal="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/video_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            android:ellipsize="end"/>


        <TextView
            android:ellipsize="marquee"
            android:id="@+id/video_folder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/folder_name"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/video_title"
            app:layout_constraintEnd_toEndOf="@id/video_title"
            app:layout_constraintTop_toBottomOf="@id/video_title"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@id/video_folder"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="2dp"
            app:layout_constraintVertical_bias="1"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>