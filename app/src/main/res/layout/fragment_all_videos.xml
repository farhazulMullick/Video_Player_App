<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.farhazulmullick.viewmodel.VideoViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.VideosFragment">

        <TextView
            android:id="@+id/tv_total_videos"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.totalVideos}"
            android:padding="0dp"
            tools:text="Videos"
            android:textSize="13sp"
            style="@style/customSubTitleStyle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_total_videos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/layout_row_video_player" />

    </LinearLayout>
</layout>